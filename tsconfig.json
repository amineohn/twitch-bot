{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2021"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
        "@/*": ["/*"],
        "@events/*": ["./events/*"],
        "@utils/*": ["./utils/*"],
        "@interfaces/*": ["./interfaces/*"],
    },
    "exclude": [
      "node_modules",
    ],
    "moduleResolution": "node",

  }
}
